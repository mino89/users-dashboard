root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Specific files configuration 
[*.md]
trim_trailing_whitespace = false
max_line_length = off

[{Makefile,*.yaml,*.yml}]
indent_size=2
indent_style = space

[{*.js,*.json,*.ts}]
indent_style = space
indent_size = 2

[{*.js,*.ts}]
block_comment_start = /**
block_comment = *
block_comment_end = */